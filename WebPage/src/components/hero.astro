---
import { Picture } from "astro:assets";
import appOverviews from "assets/App overviews.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-5 place-items-center pt-16 pb-8 md:pt-12 md:pb-12"
>
  <div class="py-6 md:order-1 hidden md:block lg:col-span-3">
    <Picture
      src={appOverviews}
      alt="ExcalidrawZ in the air"
      widths={[300, 600, 900]}
      sizes="(max-width: 900px) 100vw, 900px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="lg:col-span-2">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
      ExcalidrawZ <br /> An excalidraw client
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Keep your files locally and safely, with seamless sync across your Apple
      devices. With native performance and system
      integration. Perfect for both quick sketches and professional diagrams.
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3 items-end">
      <script
        type="text/javascript"
        src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js"
        data-name="bmc-button"
        data-slug="Chocoford"
        data-color="#FFDD00"
        data-emoji="â˜•"
        data-font="Cookie"
        data-text="Buy me a coffee"
        data-outline-color="#000000"
        data-font-color="#000000"
        data-coffee-color="#ffffff"></script>
    </div>
  </div>
</main>
