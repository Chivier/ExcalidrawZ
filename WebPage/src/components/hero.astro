---
import { Picture } from "astro:assets";
import appOverviews from "assets/App overviews.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-5 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div class="py-6 md:order-1 hidden md:block lg:col-span-3">
    <Picture
      src={appOverviews}
      alt="ExcalidrawZ in the air"
      widths={[300, 600, 900]}
      sizes="(max-width: 900px) 100vw, 900px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="lg:col-span-2">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
      ExcalidrawZ <br /> An excalidraw client
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Keep your files locally and safely.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3 items-end">
      <a href="https://apps.apple.com/app/excalidrawz/id6636493997" rel="noopepriner">
        <Icon
          height={60}
          width={160}
          name="Download_on_the_App_Store_Badge_US-UK"
        />
      </a>
      <span class="text-gray-500 text-sm">or</span>
      <a href="/downloads/latest" class="text-blue-500 underline text-sm"
        >Download Directly</a
      >
    </div>
  </div>
</main>
